<% provide :title, "Play" %>
<div class="films-container">
<%= render "layouts/bar_address" %>
<div class = "play-container">
  <video width="100%" controls>
    <source src="<%= @episode.link %>" type="video/mp4">
  </video>
  <div class="episodes block">
    <ul>
      <li><span>Episode</span></li>
      <% @episodes.each do |episode| %>
        <li>
          <%= link_to episode.number, film_episode_path(@film ,episode) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render @comments %>
</div>
<%= render "layouts/sidebar" %>