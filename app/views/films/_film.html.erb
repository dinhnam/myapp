<div class="item-container">
  <div class="item transit-short shade">
    <div class = "cover">
      <%= link_to image_tag(film.thumb), film %>
    </div>
    <div class="title">
      <%= link_to film.name, film %>
    </div>
    <div class="vote">
        <% film.rates.to_i.times do %>
            <%= image_tag 'star.png' %>
        <% end %>
        <% dec_rate = film.rates - film.rates.to_i %>
        <% if dec_rate > 0 %>
          <% if dec_rate < 0.4 %>
            <%= image_tag 'one_quarter_star.png' %>
          <% elsif dec_rate < 0.7 %>
            <%= image_tag 'half_star.png' %>
          <% else %>
            <%= image_tag 'three_quarter_star.png' %>
          <% end %>
        <% end %>
        <%= image_tag 'eye.png' , class: "eye"%>
        <i><%= film.views %></i>
    </div>
    <div class="process">
      <%= film.episodes.count %>/<%= film.total_episodes||= "??" %>
    </div>
  </div>
</div>