<div class="movie-info">
  <div class="movie-cover">
    <%= image_tag @film.cover %>
  </div>
  <div class="movie-detail">
    <p class="name">
       <%= @film.name %>
    </p>
    <table class="describe">
        <tr>
            <td><b>Thể loại</b></td>
            <td>
                <% @film.categories.all.each_with_index do |genre, index| %>
                    <%= link_to genre.name, genre %>
                    <% if index + 1 < @film.categories.all.length %>
                      <span>,</span>
                    <% end %>
                <% end %>
            </td> 
        </tr>
        <tr>
            <td><b>Trạng thái</b></td>
            <td>11/12</td> 
        </tr>
        <tr>
            <td><b>Dạng anime</b></td>
            <td><%= link_to "TV Series", "#"%></td> 
        </tr>
        <tr>
            <td><b>Season</b></td>
            <td><%= link_to "Mùa Thu Năm 2018", "#"%></td>
        </tr>
        <tr>
            <td><b>Quốc gia</b></td>
            <td>
                <% @film.countries.all.each do |country| %>
                  <%= link_to country.name, "#" %>
                <% end %>
            </td> 
        </tr>
        <tr>
            <td><b>Hãng phim</b></td>
            <td>
                <% @film.studios.all.each do |studio| %>
                <%= link_to studio.name, "#"%>
                <% end %>
            </td> 
        </tr>
        <tr>
            <td><b>Lượt xem</b></td>
            <td><%= @film.view %></td> 
        </tr>
        <tr>
            <td><b>Đánh giá</b></td>
            <td><%= @film.rating %></td> 
        </tr>
    </table>
  </div>
  <div class="movie-intro">
    <p><b>Nội dung:</b></p>
    <%= @film.intro %>
  </div>
</div>