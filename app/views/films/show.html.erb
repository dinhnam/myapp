<% provide :title, "Film" %>
<div class="movie-container">
  <div class="movie-cover">
    <%= image_tag @film.cover %>
    <%= link_to "Xem Phim", film_path(id: @film.id, ep: 1), class: "play" %>
    <%= link_to "Theo dõi", @film , class: "follow" %>
  </div>
  <div class="movie-detail">
    <h3 class="name">
       <%= @film.name %>
    </h3>
    <table class="describe">
        <tr>
            <th>Thể loại</th>
            <td>
                <% @film.categories.all.each_with_index do |genre, index| %>
                    <%= link_to genre.name, films_path(genre: genre.name) %>
                    <% if index + 1 < @film.categories.all.length %>
                      <span>,</span>
                    <% end %>
                <% end %>
            </td> 
        </tr>
        <tr>
            <th>Trạng thái</th>
            <td>11/12</td> 
        </tr>
        <tr>
            <th>Dạng anime</th>
            <td><%= link_to "TV Series", "#"%></td> 
        </tr>
        <tr>
            <th>Season</th>
            <td><%= link_to "Mùa Thu Năm 2018", "#"%></td>
        </tr>
        <tr>
            <th>Quốc gia</th>
            <td>
                <% @film.countries.all.each do |country| %>
                  <%= link_to country.name, "#" %>
                <% end %>
            </td> 
        </tr>
        <tr>
            <th>Hãng phim</th>
            <td>
                <% @film.studios.all.each do |studio| %>
                <%= link_to studio.name, "#"%>
                <% end %>
            </td> 
        </tr>
        <tr>
            <th>Thời lượng</th>
            <td>25 bhút/tậb</td> 
        </tr>
        <tr>
            <th>Chất lượng</th>
            <td>Full HD</td> 
        </tr>
         <tr>
            <th>Ngôn ngữ</th>
            <td>bhụ đề tiếng việt</td> 
        </tr>
        <tr>
            <th>Lượt xem</th>
            <td><%= @film.all_views %></td> 
        </tr>
        <tr>
            <th>Đánh giá</th>
            <td><%= @film.rate %></td> 
        </tr>
        <tr>
            <th>Tập mới</th>
            <td>
              <% @episodes_last.each do |ep| %>
                <%= link_to ep.name, film_path(ep: ep.number) %> 
              <% end %>
            </td> 
        </tr>
    </table>
  </div>
  <div class="movie-intro">
    <p><b>Nội dung:</b></p>
    <div class="intro"><%= @film.intro %></div>
    <p><b>trailer:</b></p>
    <div class="trailer">
    <iframe width="100%" height="100%" src="https://www.youtube.com/embed/vRVEZq8plc0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>
  </div>
  
</div>