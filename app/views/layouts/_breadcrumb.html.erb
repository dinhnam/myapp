<div class="breadcrumb">
    <ol>
    <li>
      <%= link_to "Home", root_path %>
    </li>
    <% if @film %>
      <li class="gap"></li>
      <li>
        <%= link_to @film.name, @film %>
      </li>
      <% if @episode %>
        <li class="gap"></li>
        <li>
          <%= link_to @episode.name, film_episode_path(@film, @episode) %>
        </li>
      <% end %>
    <% end %>
    </ol>
</div>