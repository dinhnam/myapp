<% @film.comments.all.each do |comment| %>
  <div class="comment-container left">
  <div class="comment left" id = "<%= comment.id %>" >
    <div class="user-avatar left">
      <%= image_tag comment.user.avatar %>
    </div>
    <div class="info-comment left">
      <div class="left">
          <%= comment.user.name %>
      </div>
      <div class="date left">
          <%= comment.created_at %>
      </div>
    </div>
    <div class="comment-content right">
      <div class="para left"><%= comment.content %></div>
    </div>
  </div>
  <% comment.replies.all.each do |reply| %>
      <div class="reply right">
          <div class="user-avatar left">
              <%= image_tag reply.user.avatar %>
          </div>
          <div class="info-comment left">
              <div class="left">
                  <%= reply.user.name %>
              </div>
              <div class="date left">
                  <%= reply.created_at %>
              </div>
          </div>
          <div class="comment-content right">
              <%= reply.content %>
          </div>
      </div>
  <% end %>
  </div>
<% end %>