<style>
  .item-seach{
    display: flex;
    background-color: rgba(27, 20, 20, 0.9); 
    margin: 2px;
  } 
  .name{
    height: 50px; 
    box-sizing: border-box; 
    white-space: nowrap; 
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
    }
  .name i{
    color: rgb(190, 231, 170);
  }
  .picture{
    width: 20%; 
    height: 50px; 
    box-sizing: border-box;}
  .picture img{
    height: 100%;
   }
  .item-seach:hover{
    background-color: rgba(80, 58, 58, 0.9);
   }
</style>
<% @results.each do |result| %>
  <div class="item-seach" style="">
      <div class = "picture">
        <% if result.thumb %>
          <%= link_to image_tag(result.thumb), result %>
        <% else %>
          <%= link_to image_tag('not_found.png'), result %>
        <% end %>
      </div>
      <div class="name">
        <%= link_to result.name, result %>
        <br/>
        <i>
          <% if result[:type].nil? %>
            Film
          <% else %>
            <%= result[:type] %>
          <% end %>
        </i>
      </div>
  </div>
<% end %>