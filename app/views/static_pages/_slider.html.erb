<div id = "slider-container">
  <div class="prev-slide">&#10094;</div>
  <div class="next-slide">&#10095;</div>
  <div id="list-slide" class="transit-slow">
    <% @focus_films.each_with_index do |film, index| %>
      <%= content_tag :div, class: "slide-item transit-slow", id: index do %>
        <%= content_tag :div, class: "item transit-short", title: film.name  do %>
          <div class="cover">
            <%= image_tag film.pictures[1].nil? ? "default-thumb.jpg" : 
                  film.pictures[1].url %>
          </div>
          <div class="title">
            <strong><%= film.name %></strong><br/>
            <b><%= link_to "Xem Phim", film %></b>
          </div>
          
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div id="thumb-container">
    <div id="list-thumb" class="transit-medium">
      <% @focus_films.each_with_index do |film, index| %>
        <%= content_tag :div, class: "thumb-item", id: index do %>
          <%= content_tag :div, class: "item thumb transit-short", title: film.name  do %>
            <div class="cover shade">
              <%= image_tag film.pictures[1].nil? ? 
                "default-thumb.jpg" : film.pictures[1].small_thumb.url %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
