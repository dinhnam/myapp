<div class="user-form">
  
  <%= form_with model: User.new, class: "shade", local: true do |f| %>
    <h2> SIGN UP </h2>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.label :confirmation %>
    <%= f.text_field :password_confirmation %>
    <%= f.submit "Đăng kí" %>
    <p>Atready a member? <%= link_to "Sign In", signin_path %> </p>
  <% end %>
</div>